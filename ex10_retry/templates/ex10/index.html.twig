{% extends 'base.html.twig' %}

{% block title %}Ex10 – SQL & ORM{% endblock %}

{% block body %}
    <h1>Ex10 – Lecture de fichier et insertion SQL & ORM</h1>

    {# Messages flash #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">{{ message }}</div>
        {% endfor %}
    {% endfor %}

    <div class="form-wrapper">
        <h2>Insérer une donnée SQL</h2>
        {{ form_start(formSQL, {'action': path('ex10_insert_data_sql'), 'method': 'POST'}) }}
            {{ form_row(formSQL.comment) }}
            <button type="submit">Insérer en SQL</button>
        {{ form_end(formSQL) }}

        <h2>Insérer une donnée ORM</h2>
        {{ form_start(formORM, {'action': path('ex10_insert_data_orm'), 'method': 'POST'}) }}
            {{ form_row(formORM.comment) }}
            <button type="submit">Insérer en ORM</button>
        {{ form_end(formORM) }}
    </div>

    <h2>Importer depuis text.txt</h2>
    <form action="{{ path('ex10_import_file') }}" method="post">
        <button type="submit">Importer dans SQL & ORM</button>
    </form>


    <h2>Données existantes (SQL)</h2>
    {% if datasSQL is not empty %}
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Commentaire</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for data in datasSQL %}
                    <tr>
                        <td>{{ data.id }}</td>
                        <td>{{ data.data }}</td>
                        <td>{{ data.date|date('Y-m-d H:i:s') }}</td>
                        <td>
                            <form action="{{ path('ex10_delete_data_sql', {id: data.id}) }}" method="post">
                                <button type="submit" onclick="return confirm('Supprimer cet enregistrement SQL ?')">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucune donnée SQL trouvée.</p>
    {% endif %}

    <h2>Données existantes (ORM)</h2>
    {% if datasORM is not empty %}
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Commentaire</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for data in datasORM %}
                    <tr>
                        <td>{{ data.id }}</td>
                        <td>{{ data.content }}</td>
                        <td>{{ data.date|date('Y-m-d H:i:s') }}</td>
                        <td>
                            <form action="{{ path('ex10_delete_data_orm', {id: data.id}) }}" method="post">
                                <button type="submit" onclick="return confirm('Supprimer cet enregistrement ORM ?')">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucune donnée ORM trouvée.</p>
    {% endif %}
{% endblock %}
