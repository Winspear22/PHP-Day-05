{% extends 'base.html.twig' %}

{% block title %}Ex10 – SQL & ORM{% endblock %}

{% block body %}
    <h1>Ex10 – Lecture de fichier et insertion SQL</h1>

    {# Messages flash #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">{{ message }}</div>
        {% endfor %}
    {% endfor %}

    <h2>Insérer une donnée SQL</h2>
    {{ form_start(form, {'action': path('ex10_insert_data_sql'), 'method': 'POST'}) }}
        {{ form_row(form.comment) }}
        <button type="submit">Insérer</button>
    {{ form_end(form) }}

    <h2>Données existantes (SQL)</h2>
    {% if datas is not empty %}
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Commentaire</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for data in datas %}
                    <tr>
                        <td>{{ data.id }}</td>
                        <td>{{ data.data }}</td>
                        <td>{{ data.date|date('Y-m-d H:i:s') }}</td>
                        <td>
                            <form action="{{ path('ex10_delete_data_sql', {id: data.id}) }}" method="post">
                                <button type="submit" onclick="return confirm('Supprimer cet enregistrement ?')">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucune donnée trouvée.</p>
    {% endif %}
{% endblock %}
