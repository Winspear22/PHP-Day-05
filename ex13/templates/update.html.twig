{% extends 'base.html.twig' %}

{% block title %}Ex13 — Modifier un employé (ORM){% endblock %}

{% block body %}
    <h1>Ex13 — Modifier un employé (ORM)</h1>

    {% for msg in app.flashes('success') %}
        <div class="alert">{{ msg }}</div>
    {% endfor %}
    {% for msg in app.flashes('error') %}
        <div class="alert error">{{ msg }}</div>
    {% endfor %}

    {{ form_start(form) }}

    {% for child in form %}
        <div class="form-group">
            {{ form_label(child) }}
            {{ form_widget(child) }}
        </div>
    {% endfor %}

    <button type="submit">Enregistrer</button>
    <a href="{{ path('ex13_index') }}"><button type="button">Retour à la liste</button></a>
    {{ form_end(form) }}
{% endblock %}
