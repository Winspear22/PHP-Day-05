{% extends 'base.html.twig' %}

{% block title %}Ex01 — Création de la table User ORM{% endblock %}

{% block body %}
<h1>Ex01 — Création de la table User (ORM)</h1>

{% for msg in app.flashes('notice') %}
    <div class="alert">{{ msg }}</div>
{% endfor %}
{% for msg in app.flashes('error') %}
    <div class="alert error">{{ msg }}</div>
{% endfor %}

<div class="form-wrapper">
    <form method="post" action="{{ path('ex01_index') }}">
        <button type="submit">Créer la table user</button>
    </form>
</div>
{% endblock %}
