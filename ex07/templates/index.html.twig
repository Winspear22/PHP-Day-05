{% extends 'base.html.twig' %}
{% block title %}Ex07 — Update Users (ORM){% endblock %}

{% block body %}
<h1>Liste des utilisateurs</h1>

{# Messages flash #}
{% for msg in app.flashes('success') %}
    <div class="alert">{{ msg }}</div>
{% endfor %}
{% for msg in app.flashes('error') %}
    <div class="alert error">{{ msg }}</div>
{% endfor %}

<a href="{{ path('ex07_create') }}" class="btn">Créer 10 utilisateurs aléatoires</a>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Name</th>
            <th>Email</th>
            <th>Enable</th>
            <th>Birthdate</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.enable ? 'Oui' : 'Non' }}</td>
                <td>{{ user.birthdate ? user.birthdate|date('d/m/Y') : '' }}</td>
                <td>{{ user.address }}</td>
                <td>
                    <a class="btn" href="{{ path('ex07_update', {'id': user.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun utilisateur en base.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
