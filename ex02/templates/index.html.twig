{% extends 'base.html.twig' %}
{% block title %}Ex02 — Ajouter un User SQL{% endblock %}

{% block body %}
    {% for msg in app.flashes('notice') %}
        <div class="alert">{{ msg }}</div>
    {% endfor %}

    <div class="form-wrapper">
        <h1>Ex02 — Ajouter un User SQL</h1>
        {{ form(form) }}
        <h2>Liste des personnes</h2>
    </div>

    <table>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Name</th>
            <th>Email</th>
            <th>Enable</th>
            <th>Birthdate</th>
            <th>Address</th>
        </tr>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.enable ? 'Oui' : 'Non' }}</td>
                <td>{{ user.birthdate }}</td>
                <td>{{ user.address }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7" style="text-align: center;">Aucune personne enregistrée.</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
