{% extends 'base.html.twig' %}

{% block title %}Ex04 — Suppression des users (SQL){% endblock %}

{% block body %}
    <h1>Ex04 — Génération & suppression (SQL)</h1>

    {% for msg in app.flashes('notice') %}
        <div class="alert">{{ msg }}</div>
    {% endfor %}

    <form method="post" action="{{ path('ex04_fill') }}" style="margin-bottom: 1em;">
        <button type="submit">Remplir la table avec 10 users</button>
    </form>

    <h2>Liste des utilisateurs</h2>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Actif</th>
                <th>Date de naissance</th>
                <th>Adresse</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.enable ? 'Oui' : 'Non' }}</td>
                <td>{{ user.birthdate|date('Y-m-d') }}</td>
                <td>{{ user.address }}</td>
                <td>
                    <form method="post" action="{{ path('ex04_delete', {id: user.id}) }}" style="display:inline;">
                        <button type="submit" onclick="return confirm('Confirmer la suppression ?')">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8" style="text-align: center;">Aucune personne enregistrée.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
